<UserControl x:Class="Wpf_Wcl.UserControls.UserLoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf_Wcl.UserControls"
             mc:Ignorable="d"          
             d:DesignHeight="200" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"/>
            <RowDefinition/>
            <RowDefinition Height="0.6*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label 
            Grid.Row="0" 
            Margin="5 0 0 0"
            Content="Login"/>
        <TextBox 
            Grid.Row="1" 
            Margin="10" />
        <Label Grid.Row="2"
               Margin="5 0 0 0"
               Content="Password"/>
        <PasswordBox
            Grid.Row="3"
            Margin="10"/>
        <Button 
            Grid.Row="4"
            Margin="10"
            Content="Sign in"/>
        <Button
            Visibility="Hidden"
            Grid.Row="4"
            Margin="10"
            Content="Logout"/>
    </Grid>
</UserControl>
